@model IEnumerable<Ecomm.Web.Models.ProductDto>


<br/><br/>

<div class="container p-4 border">
    <div class="row pb-w">
        <div class="col">
            <h1 class="text-primary">Product List</h1>
        </div>

        <div class="col text-end pt-1">
            <a asp-action="ProductCreate" class="btn btn-outline-info"><i class="fas fa-plus"></i> Create New Product</a>
        </div>

    </div>

    <table class="table">

        <thead>
        <tr>
            <th>Name</th>
            <th>Category Name</th>
            <th>Price</th>
        </tr>
        </thead>

        <tbody>

        @foreach (var productDto in Model)
        {
            <tr>
                <td>@productDto.Name</td>
                <td>@productDto.CategoryName</td>
                <td>@productDto.Price.ToString("C")</td>
                <td>
                    <a asp-action="EditProduct" asp-route-productId="@productDto.Id" class="btn btn-success">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>

                <td>
                    <a asp-action="DeleteProduct" asp-route-productId="@productDto.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
            </tr>
        }

        </tbody>

    </table>


</div>